// Prisma schema for Small Town Gallery
// Run `npx prisma generate` after changes
// Run `npx prisma migrate dev` to create migrations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// User Management & Authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String
  role          Role      @default(PENDING)
  inviteCode    String?   @unique
  invitedBy     String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Photographer profile (markdown supported)
  bio           String?   @db.Text  // Markdown bio
  website       String?   // Personal website URL
  location      String?   // City/state
  profilePhotoUrl String? // Optional profile photo

  projects      Project[]
  photos        Photo[]
  accounts      Account[]
  sessions      Session[]

  @@index([email])
}

enum Role {
  PENDING       // Signed up, waiting for admin approval
  PHOTOGRAPHER  // Can upload to their own projects
  ADMIN         // Can manage all content and approve users
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Town & Geographic Data
model Town {
  id          String    @id @default(cuid())
  name        String    @unique
  state       String    @default("Illinois")
  latitude    Float
  longitude   Float

  // Rich town information (markdown supported)
  description String?   @db.Text  // Markdown description
  history     String?   @db.Text  // Markdown historical context
  population  Int?
  founded     Int?      // Year founded
  county      String?

  // Media
  thumbnailUrl String?  // Town thumbnail for map/cards

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  projects    Project[]

  @@index([name])
}

// Photography Projects
model Project {
  id            String    @id @default(cuid())
  townId        String
  year          Int
  photographer  String    // Cached from user.name for display
  userId        String
  published     Boolean   @default(false)
  featuredPhotoId String?
  photoCount    Int       @default(0)

  // Rich project content (markdown supported)
  title         String?   // Optional custom title (default: "Town Name Year")
  description   String?   @db.Text  // Markdown project description/artist statement
  notes         String?   @db.Text  // Markdown field notes, process, reflections

  // Metadata
  startDate     DateTime? // When photography began
  endDate       DateTime? // When photography ended

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  town          Town      @relation(fields: [townId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos        Photo[]

  @@unique([townId, year, userId])
  @@index([townId])
  @@index([userId])
  @@index([published])
}

// Individual Photos
model Photo {
  id          String    @id @default(cuid())
  projectId   String
  userId      String
  filename    String

  // Rich photo content (markdown supported for caption)
  title       String?
  caption     String?   @db.Text  // Markdown caption with story/context
  location    String?   // Specific location within town
  dateTaken   DateTime? // When photo was taken (from EXIF or manual)

  // Storage
  blobUrl     String    // Vercel Blob URL
  pathname    String    // Blob pathname for deletion

  // Image metadata
  width       Int
  height      Int
  size        Int       // File size in bytes
  order       Int       @default(0)
  exifData    Json?     // EXIF metadata (camera, settings, etc.)

  uploadedAt  DateTime  @default(now())

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@index([order])
}
